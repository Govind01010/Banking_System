    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />


  <style>
    .modal-header{
      padding:0.5rem 1rem;
    }
    li{
      list-style: none;
    }
    body{
      background-image: linear-gradient(to top, #accbee 0%, #e7f0fd 100%);
    }
  </style>
    <title>Document</title>
</head>
<body>
    <div class="header d-flex justify-content-between m-3">
        <h6 class="text-center"><i class="bi bi-bank"></i> CUSTOMER DATABASE</h6>
        <div class="header-left d-flex">
          <div class="path"><a href="/TransactionList" class="btn btn-primary pb-0 pt-0 me-2"><i class="bi bi-wallet2"></i> View Transactions</a></div>
            
            <div class="path"><a href="/AddNewUser" class="btn btn-primary pb-0 pt-0 me-2"><i class="bi bi-person-plus-fill"></i>  Add Customer</a></div>
              <div class="path"><a href="/" class="btn btn-primary pb-0 pt-0 "><i class="bi bi-house-door-fill"></i> Home</a></div>
        </div>
    </div>

    <table border="1"  class="table table-striped table-dark table-hover table-sm fs-15 mt-2 m-auto"
      <thead class="thead-light">
        <tr>
            <th>S.NO</th>
            <th>customer Name</th>
            <th>Customer EailId</th>
            <th>customer Address</th>
            <th>Balance</th>
            <th class="text-center">Action</th>
        </tr>
      </thead>

        <% if(customer.length>0){ %>
            <% for(var i=0 ; i<customer.length ; i++ ){ %>
                <tr>
                    <td><%- customer[i].cust_id %></td>
                    <td><%- customer[i].cust_name %></td>
                    <td><%- customer[i].cust_emailID %></td>
                    <td><%- customer[i].cust_address %></td>
                    <td><%- customer[i].balance %><i class="bi bi-currency-rupee"></i></td>
                    <td class="d-flex justify-content-around"><a href="/payment?id=<%- customer[i].cust_id %>" class="btn btn-primary pt-0 pb-0"><i class="bi bi-person-circle"></i> Select</a><a href="/delete-customer?id=<%- customer[i].cust_id %>" class="btn btn-primary pt-0 pb-0"><i class="bi bi-person-dash-fill"></i> Delete</a></td>
                    
                      
                    </button></td>
                </tr>
                <% } %>
        <% }else{ %>
            
            <h1>customer data not found!</h1>
            <% }  %>
    </table>

</body>
 </html>